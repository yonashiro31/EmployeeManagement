             new SelectListItem(){Value="aaa",Text="aaa"}
    }
    )
    <br>
    @*役職*@
    @Html.DropDownListFor(
   Model => Model.Busyo,
   new SelectListItem[]
       {
            new SelectListItem(){Value="aaa",Text="aaa"},
            new SelectListItem(){Value="aaa",Text="aaa"},
            new SelectListItem(){Value="aaa",Text="aaa"}
   }
   )

    氏名
    @Html.TextBoxFor(model => model.EmployeeID, new { size = 31, maxlength = 8 })

    性別
    @Html.RadioButtonFor(
    model => model.Gender,
    "男"
    )

    @Html.RadioButtonFor(
    model => model.Gender,
    "女"
    )

    @Html.RadioButtonFor(
    model => model.Gender,
    "外国籍"
    )

    基本給料
    @Html.TextBoxFor(model => model.EmployeeID, new { size = 31, maxlength = 8 })


    メモ
    @Html.TextBoxFor(model => model.EmployeeID, new { size = 31, maxlength = 8 })
